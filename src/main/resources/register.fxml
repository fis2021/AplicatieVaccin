<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" prefHeight="300" prefWidth="300" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.loose.fis.av.controllers.RegistrationController">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
    </padding>
   <children>
       <Text id="title-text" text="Aplicatie- Inscriere la Vaccin" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="0" />
   
       <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
   
       <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
       <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
   
       <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
       <Label text="Nume:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
   
       <TextField fx:id="surnameField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
       <Label text="Prenume:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
   
       <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
       <Label text="CNP/UnitCode:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
   
       <TextField fx:id="codeField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
   
       <Label text="Role:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
   
       <ChoiceBox fx:id="role" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
    </ChoiceBox>
   
       <Text fx:id="registrationMessage" GridPane.columnIndex="1" GridPane.rowIndex="8" />
       <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="7">
          <children>
            <Button mnemonicParsing="false" onAction="#changeToLogIn" text="Log In" />
              <Button onAction="#handleRegisterAction" text="Register" />
          </children>
       </HBox>
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
